<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ln_1"
        android:layout_marginLeft="2dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:id="@+id/cv_hinh"
            app:cardCornerRadius="11dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_hinh"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#ff0"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chethaiflan" />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/cv_hinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ln_tensanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/check" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_tensanpham"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Bia úp ngược vị chanh"
                    android:textColor="@color/gray_700"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:layout_below="@+id/ln_tensanpham"
                android:textSize="16sp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#4a4a4a"
                android:textStyle="bold"
                android:text="x1"
                android:id="@+id/tv_soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_gia"
        android:textStyle="bold"
        android:textColor="@color/gray_700"
        android:text="40000 VND"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>