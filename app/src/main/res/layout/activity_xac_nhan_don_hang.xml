<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XacNhanDonHang">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray_700"
            android:text="Xác nhận đơn hàng"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_above="@+id/rl_footer"
        android:background="@color/gray_200"
        android:layout_below="@id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_nhom1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ln_1"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_700"
                        android:text="Giao hàng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@drawable/ggmap"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                </LinearLayout>
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_thietlapdiachi"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ln_1"
                    android:textColor="@color/gray_700"
                    android:text="@string/thietlapdiachi"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ln_1"
                    android:id="@+id/rl_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray_700"
                        android:text="Triều Jiu"
                        android:id="@+id/tv_tenkh"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/gray_700"
                        android:layout_below="@+id/tv_tenkh"
                        android:text="Sđt: 0123456789"
                        android:id="@+id/tv_sdtkh"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/tv_sdtkh"
                        android:textColor="@color/gray_700"
                        android:text="Số 20 Cao Hồng Lãnh, phường Hòa Quý, quận Ngũ Hành Sơn, Đà Nẵng"
                        android:id="@+id/tv_diachi"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_suadiachi"
                    android:textColor="#0B35CC"
                    android:layout_marginRight="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="Sửa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_nhom2"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/rl_nhom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_clock"
                    android:background="@drawable/clock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:text="Giao ngay"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/iv_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_nhom3"
                android:padding="8dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_below="@id/rl_nhom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tenquan"
                    android:textSize="12sp"
                    android:textColor="@color/gray_700"
                    android:textStyle="bold"
                    android:text="Quán ăn vặt Happy Tea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ListView
                    android:id="@+id/lv_xndh"
                    android:layout_below="@+id/tv_tenquan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/rl_nhom4"
                android:layout_below="@+id/rl_nhom3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/white"
                    android:id="@+id/rl_nhom4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray_700"
                        android:textStyle="bold"
                        android:text="Tổng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_tong"
                        android:text="40000VND"
                        android:textStyle="bold"
                        android:textColor="@color/gray_700"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/rl_nhom4_1"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:id="@+id/rl_nhom4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray_700"
                        android:textStyle="bold"
                        android:text="Phí giao hàng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_phigiaohang"
                        android:text="10000VND"
                        android:textStyle="bold"
                        android:textColor="@color/gray_700"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/rl_nhom4_2"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:id="@+id/rl_nhom4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray_700"
                        android:textStyle="bold"
                        android:text="Phí dịch vụ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_phidichvu"
                        android:text="2000VND"
                        android:textStyle="bold"
                        android:textColor="@color/gray_700"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/rl_nhom4_3"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:id="@+id/rl_nhom4_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/gray_700"
                        android:textStyle="bold"
                        android:text="Tổng cộng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_tongcong"
                        android:textSize="18sp"
                        android:text="52000VND"
                        android:textStyle="bold"
                        android:textColor="@color/gray_700"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/rl_nhom4"
                android:id="@+id/rl_nhom5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/white"
                    android:id="@+id/rl_nhom5_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_51"
                        android:src="@drawable/ic_truck"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/iv_51"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray_700"
                        android:textStyle="bold"
                        android:text="Giao tận cửa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Switch
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/rl_nhom5_1"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:id="@+id/rl_nhom5_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_flag"
                        android:id="@+id/iv_52"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_toRightOf="@+id/iv_52"
                        android:layout_marginLeft="4dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray_700"
                        android:textStyle="bold"
                        android:text="Lấy dụng cụ ăn uống"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Switch
                        android:checked="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/rl_nhom5_2"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:id="@+id/rl_nhom5_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_edit_3"
                        android:id="@+id/iv_53"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/iv_53"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray_700"
                        android:textStyle="bold"
                        android:text="Ghi chú"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/gray_700"
                            android:layout_width="wrap_content"
                            android:text="Chưa có"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:background="@drawable/ic_right"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rl_footer"
        android:paddingTop="18dp"
        android:paddingBottom="26dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:id="@+id/ln_airpay"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_ltt"
            android:padding="10dp"
            android:layout_width="160dp"
            android:layout_height="50dp">
            <ImageView
                android:background="@drawable/ic_pay"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <TextView
                android:textColor="@color/gray_700"
                android:layout_marginLeft="12dp"
                android:text="Ví AirPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_tienmat"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_ltt_active"
            android:padding="10dp"
            android:layout_width="160dp"
            android:layout_height="50dp">
            <ImageView
                android:background="@drawable/ic_dollar"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <TextView
                android:textColor="@color/gray_700"
                android:layout_marginLeft="12dp"
                android:text="Tiền mặt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textColor="#0B35CC"
            android:layout_marginBottom="8dp"
            android:text="Phương thức thanh toán khác"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/btn_muangay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_muangay"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Mua ngay"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_thanhtoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>