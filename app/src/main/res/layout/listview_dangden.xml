<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:id="@+id/cv_hinh"
        android:layout_alignParentLeft="true"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/biaupvichanh"
                android:scaleType="centerCrop"
                android:id="@+id/iv_hinh"
                android:background="@color/magenta_200"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
            <ImageView
                android:id="@+id/iv_sale"
                android:layout_marginBottom="4dp"
                android:layout_alignBottom="@+id/iv_hinh"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/iv_hinh"
                android:src="@drawable/salelabel"
                android:visibility="visible" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/cv_hinh"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <LinearLayout
            android:layout_alignParentTop="true"
            android:id="@+id/ln_tensanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/check" />
            <TextView
                android:id="@+id/tv_tensanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Bia úp ngược vị chanh"
                android:textColor="@color/gray_700"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_diachi"
            android:textColor="@color/gray_700"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/ln_tensanpham"
            android:text="Quán ăn vặt Happy Tea, Đà Nẵng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_diachi"
            android:orientation="vertical"
            android:id="@+id/ln_gia"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_gia"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textColor="@color/gray_700"
                android:text="39000VND"
                android:layout_below="@+id/tv_diachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/ln_khuyenmai"
            android:visibility="visible"
            android:layout_below="@+id/tv_diachi"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_giatruocsale"
                android:background="@drawable/strikethrough_shape"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:text="45000VND"
                android:layout_below="@+id/tv_diachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/gray_700"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:text="~"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_giasausale"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textColor="@color/gray_700"
                android:text="39000VND"
                android:layout_below="@+id/tv_diachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ln_khuyenmai"
            android:id="@+id/ln_danhgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star" />
            <TextView
                android:id="@+id/tv_danhgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="4.8"
                android:textColor="@color/gray_700"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="#000"
            android:text="x1"
            android:layout_below="@id/ln_danhgia"
            android:id="@+id/tv_soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#46DA35"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="@string/dangden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>