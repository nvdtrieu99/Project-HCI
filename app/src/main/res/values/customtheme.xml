<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/magenta_1000</item>
        <item name="colorPrimaryVariant">@color/magenta_200</item>
        <item name="colorOnPrimary">#f9f9f9</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/magenta_1000</item>
        <item name="android:textColorSecondary">#000</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>
    
    <style name="cursorStyle">
        <item name="colorAccent">@color/magenta_1000</item>
    </style>

</resources>